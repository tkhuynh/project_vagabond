<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<%= form_for @post do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", autofocus: true %>
			</div>
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.submit "Post", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>	
</div>