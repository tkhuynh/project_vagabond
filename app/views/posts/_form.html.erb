<div class="signup">
	<h1 class="text-center">New Post</h1>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<%= form_for @post do |f| %>
				<div class="form-group">
					<%= f.label :city_id  %>
					<!-- see f.collection_select http://guides.rubyonrails.org/form_helpers.html -->
					<%= f.collection_select :city_id, City.all, :id, :name, {prompt: "Choose a City"}, class: "form-control dropdown-toggle", autofocus: true %>
				</div>
				<div class="form-group">
					<%= f.label :photo %>
					<%= f.file_field :photo, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :description %>
					<%= f.text_area :description, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.submit "Post", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>	
	</div>
</div>