<div class="container">
	<div class="row post">
		<div class="post-content">
			<div class="col-sm-12">
				<h2><%= @post.title %>
				<% if current_user == @post.user %>
					<%= link_to icon('trash-o'), @post, method: :delete, data: {confirm: "Are You Sure?"}, class: "pull-right delete" %>
					<%= link_to icon('pencil-square-o'), edit_post_path(@post), class: "pull-right edit" %>
				<% end %>
				</h2>
			</div>
			<div class="row">
				<div class="col-sm-5">
					<%= image_tag @post.photo.url(:large), class: "img-responsive" %>
					<div class="text-center">
						<%= link_to "Let's Go to " + City.find(@post.city_id).name, city_path(City.find(@post.city_id).slug), class: "btn btn-success", id: "visit-button" %>
					</div>
				</div>
				<div class="col-sm-7">
					<p><%= simple_format @post.description %><p>
				</div>
			</div>
		</div>
	</div>
</div>


