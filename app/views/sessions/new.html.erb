<div class="login">
	<h1 class="text-center">Login</h1>
	<div class="col-md-8 col-md-offset-2">
		<%= form_tag '/login' do %>
			<div class="form-group">
				<%= label_tag :email %>
				<%= email_field_tag :email, nil, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= label_tag :password %>
				<%= password_field_tag :password, nil, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= submit_tag "Submit" %>
			</div>
		<% end %>
	</div>
</div>
