<div class="signup col-md-4 col-md-offset-4">
	<h1 class="text-center form-title">Edit Profile</h1>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<%= form_for @user do |f| %>
				<div class="form-group">
					<%= f.label :avatar %>
					<%= f.file_field :avatar, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control", autofocus: true %>
				</div>
				<div class="form-group">
					<%= f.label :email %>
					<%= f.text_field :email, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.submit "Edit Profile", class: "btn btn-success" %>
					<%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
				</div>
			<% end %>
			<%= link_to "Delete Your Account?", @user, method: :delete, data: {confirm: "Are You Sure?"} %>
		</div>
	</div>
</div>